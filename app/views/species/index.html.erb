<h1>Listing species</h1>

<table>
  <tr>
    <th>Species name</th>
    <th>Common name</th>
    <th></th>
  </tr>

<% @species.each do |species| %>
  <tr>
    <td><i><%= species.species_name %></i></td>
    <td><i><%= species.common_name %></i></td>
    <td><%= link_to 'Destroy', species, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

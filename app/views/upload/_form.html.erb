<%= form_tag({action: :upload}, multipart: true) do %>

  <div class="field row">
    <div>Type</div>
    <div>
      <%= select_tag("type", options_for_select([
        ['Choose one..', '0'],['Bat/Rodent', '1'],['Frog', '2'],['Snake','3'], 
        ['Bird', '4'],['Fish', '5'],['Terrestrial Snail','6']], '7')) %>
    </div>
  </div>

  <div class="field row">
    <div><label for="file">Spreadsheet File</label></div>
    <div><%= file_field_tag :spreadsheet_file %></div>
  </div>

  <div class="field row">
    <div><label for="file">Trace File</label></div>
    <div><%= file_field_tag :trace_file %></div>
  </div>

  <div class="field row">
    <div><label for="file">Image</label></div>
    <div><%= file_field_tag :image_file %></div>
  </div>

  <div class="actions">
    <%= submit_tag("Upload") %>
  </div>
<% end %>
